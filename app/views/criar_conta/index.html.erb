<div class="container">
  <main>
    <div class="py-5 text-center" href="<% pagina_inicial_index_path %>">
      <%= link_to root_path do %>
        <img class="d-block mx-auto mb-4" src=<%= image_path("bank-logo.png") %> alt="" width="160" height="80">
    <% end %>
      <h2>Nova Conta Bancária</h2>
      <p class="lead">Preencha o formulário para abrir uma nova conta.</p>
    </div>

    <div class="row g-5">
      <div class="col-md-5 col-lg-4 order-md-last">
        <div class="d-md-flex flex-md-equal w-100 my-md-3 ps-md-3">
          <div class="bg-light me-md-3 pt-3 px-3 pt-md-5 px-md-5 text-center overflow-hidden">
            <div class="my-3 p-3">
              <h2 class="display-5">Simples e rápido</h2>
              <p class="lead">Nunca foi tão fácil ter uma conta bancária.</p>
            </div>
            <div class="bg-body shadow-sm mx-auto" style="width: 80%; height: 250px; border-radius: 21px 21px 0 0;"></div>
          </div>
        </div>
      </div>

      <div class="col-md-7 col-lg-8">
        <h4 class="mb-3">Dados pessoais</h4>
        <%= form_for :clientes, url: criar_conta_new_path, class: "needs-validation row g-3" do |form| %>
          <div class="col-sm-6">
            <%= form.label "Primeiro nome", class: "form-label" %>
            <%= form.text_field "primeiro_nome", class: "form-control", required: true %>
          </div>
          <div class="col-sm-6">
            <%= form.label "Segundo nome", class: "form-label" %>
            <%= form.text_field "segundo_nome", class: "form-control", required: true %>
          </div>

          <div class="col-12">
            <%= form.label "Cpf", class: "form-label" %>
            <%= form.number_field "cpf", class: "form-control", placeholder: "000.000.000-00", required: true %>
          </div>

          <div class="col-6">
            <%= form.label "Email", class: "form-label" %>
            <%= form.text_field "email", class: "form-control", placeholder: "you@example.com", required: true %>
          </div>

          <div class="col-6">
            <%= form.label "Telefone", class: "form-label" %>
            <%= form.number_field "telefone", class: "form-control", placeholder: "(99) 9 9999-9999", required: true %>
          </div>

          <div class="col-12">
            <%= form.label "Endereco", class: "form-label" %>
            <%= form.text_field "endereco", class: "form-control", placeholder: "Apartment or suite" %>
          </div>
          <div class="col-4">
            <%= form.label "Cidade", class: "form-label" %>
            <%= form.select "cidade", ["Goiania", "Aparecida de Goiania", "Brasilia"], { :include_blank => 'Escolha cidade' }, { class: "form-select", required: true } %>
          </div>
          <div class="col-4">
            <%= form.label "Estado", class: "form-label" %>
            <%= form.select "estado", ["GO", "DF"], { :include_blank => 'Escolha estado' }, { class: "form-select", required: true } %>
          </div>

          <div class="col-md-3">
            <%= form.label "CEP", class: "form-label" %>
            <%= form.number_field "cep", class: "form-control", placeholder: "00000-000" %>
          </div>
          <hr class="my-4">
          <%= form.submit "Abrir conta", class: "w-100 btn btn-primary btn-lg"%>
        <% end %>
      </div>
    </div>
  </main>

  <footer class="my-5 pt-5 text-muted text-center text-small">
    <p class="mb-1">&copy; 2017–2022 PAS Simple Bank</p>
    <ul class="list-inline">
      <li class="list-inline-item"><a href="#">Privacy</a></li>
      <li class="list-inline-item"><a href="#">Terms</a></li>
      <li class="list-inline-item"><a href="#">Support</a></li>
    </ul>
  </footer>
</div>